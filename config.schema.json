{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "enabledFunctionalities": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["power", "mode", "temperature", "fanSpeed", "swing", "lights", "sleep"]
        },
        "default": ["power", "mode", "temperature", "fanSpeed", "swing", "lights", "sleep"]
      },
      "discoveryInterval": {
        "type": "number",
        "minimum": 1,
        "default": 60000
      }
    }
  }
  